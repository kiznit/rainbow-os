#pragma once

#include <algorithm>
#include <string_view>

#if !defined(__MINGW32__)
#define MTL_CONSTEXPR constexpr
#else
#define MTL_CONSTEXPR inline
#endif

namespace std
{
    template <typename T>
    class basic_string
    {
    public:
        using iterator = T*;
        using const_iterator = const T*;
        using reference = T&;
        using const_reference = const T&;
        using size_type = std::size_t;

        // Construction
        constexpr basic_string() : _first{nullptr}, _last{nullptr} {}

        constexpr basic_string(const T* string)
        {
            const size_type length = _strlen(string);
            _first = new T[length + 1];
            _last = _first + length;
            std::copy(string, string + length + 1, _first);
        }

        constexpr basic_string(const T* string, size_t length) : _first{new T[length + 1]}, _last{_first + length}
        {
            auto end = std::copy(string, string + length, _first);
            *end = 0;
        }

        constexpr basic_string(const basic_string& other);

        constexpr basic_string(basic_string&& other) noexcept
        {
            _first = other._first;
            _last = other._last;
            other._first = nullptr;
            other._last = nullptr;
        }

        template <class U>
        explicit constexpr basic_string(const U& other)
        {
            const basic_string_view<T> view = other;
            _first = new T[view.length() + 1];
            _last = _first + view.length();
            auto end = std::copy(view.begin(), view.end(), _first);
            *end = 0;
        }

        template <class U>
        constexpr basic_string(const U* first, const U* last)
        {
            const size_type length = last - first;
            _first = new T[length + 1];
            _last = _first + length;
            auto end = std::copy(first, last, _first);
            *end = 0;
        }

        template <class StringViewLike>
            requires(std::is_convertible_v<const StringViewLike&, std::basic_string_view<T>> &&
                     !std::is_convertible_v<const StringViewLike&, const T*>)
        explicit basic_string(const StringViewLike& other)
        {
            auto sv = std::basic_string_view<T>(other);
            const size_type length = sv.size();
            _first = new T[length + 1];
            _last = _first + length;
            auto end = std::copy(sv.cbegin(), sv.cend(), _first);
            *end = 0;
        }

        MTL_CONSTEXPR ~basic_string()
        {
            if (_first)
                delete[] _first;
        }

        // Assignment
        constexpr basic_string& operator=(basic_string&& other)
        {
            if (_first)
                delete[] _first;
            _first = other._first;
            _last = other._last;
            other._first = nullptr;
            other._last = nullptr;

            return *this;
        }

        constexpr basic_string& assign(const T* s, size_type length)
        {
            if (_first)
                delete[] _first;

            _first = new T[length + 1];
            _last = _first + length;
            auto end = std::copy(s, s + length, _first);
            *end = 0;

            return *this;
        }

        // Accessors
        constexpr size_type length() const { return _last - _first; }
        constexpr size_type size() const { return _last - _first; }

        // Conversion
        constexpr const T* c_str() const noexcept { return _first; }

        constexpr operator std::basic_string_view<T>() const noexcept { return basic_string_view<T>(_first, size()); }

    private:
        T* _first; // begin()
        T* _last;  // end()
    };

    using string = basic_string<char>;
    using wstring = basic_string<wchar_t>;
    using u8string = basic_string<char8_t>;
    using u16string = basic_string<char16_t>;
    using u32string = basic_string<char32_t>;

    namespace literals
    {
#pragma GCC diagnostic push
#if defined(__clang__)
#pragma GCC diagnostic ignored "-Wuser-defined-literals"
#else
#pragma GCC diagnostic ignored "-Wliteral-suffix"
#endif

        MTL_CONSTEXPR std::string operator""s(const char* s, std::size_t length)
        {
            return std::string{s, length};
        }
        MTL_CONSTEXPR std::wstring operator""s(const wchar_t* s, std::size_t length)
        {
            return std::wstring{s, length};
        }
        MTL_CONSTEXPR std::u8string operator""s(const char8_t* s, std::size_t length)
        {
            return std::u8string{s, length};
        }
        MTL_CONSTEXPR std::u16string operator""s(const char16_t* s, std::size_t length)
        {
            return std::u16string{s, length};
        }
        MTL_CONSTEXPR std::u32string operator""s(const char32_t* s, std::size_t length)
        {
            return std::u32string{s, length};
        }

#pragma GCC diagnostic pop
    } // namespace literals
} // namespace std
